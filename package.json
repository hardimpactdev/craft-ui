{
  "name": "@hardimpactdev/craft-ui",
  "description": "A Vue 3 component library for building clean, calm user interfaces. Built on Reka UI and shadcn-vue with layout, navigation, kanban, and chart components.",
  "author": "Hard Impact <hello@hardimpact.dev>",
  "license": "MIT",
  "keywords": [
    "vue",
    "vue3",
    "components",
    "ui",
    "reka-ui",
    "shadcn-vue",
    "tailwindcss",
    "laravel",
    "inertia",
    "kanban",
    "charts",
    "typescript"
  ],
  "homepage": "https://github.com/hardimpactdev/craft-ui#readme",
  "bugs": {
    "url": "https://github.com/hardimpactdev/craft-ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hardimpactdev/craft-ui.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist"
  ],
  "include": [
    "src"
  ],
  "main": "dist/craft-ui.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/craft-ui.js",
      "types": "./dist/index.d.ts"
    },
    "./style.css": {
      "style": "./dist/craft-ui.css",
      "import": "./dist/craft-ui.css",
      "default": "./dist/craft-ui.css"
    },
    "./dist/craft-ui.css": {
      "style": "./dist/craft-ui.css",
      "import": "./dist/craft-ui.css",
      "default": "./dist/craft-ui.css"
    },
    "./vite": {
      "import": "./dist/vite/defineCraftConfig.js",
      "types": "./dist/src/vite/defineCraftConfig.d.ts"
    }
  },
  "version": "0.0.24",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build && npm run copy-vite-plugin",
    "build-watch": "vue-tsc -b && vite build --watch",
    "preview": "vite preview",
    "storybook": "LAUNCH_EDITOR=cursor storybook dev -p 6006",
    "copy-vite-plugin": "mkdir -p dist/vite/ts && cp -r src/vite/*.ts dist/vite/ts/ && npx esbuild src/vite/*.ts --outdir=dist/vite --format=esm",
    "build-storybook": "storybook build",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "test": "vitest --project=unit --run",
    "test:watch": "vitest --project=unit",
    "test:storybook": "vitest --project=storybook --run",
    "test:all": "vitest --run",
    "style-watch": "npx @tailwindcss/cli -i ./src/style.css -o ./dist/craft-ui.css --watch"
  },
  "dependencies": {
    "@iconify/vue": "^5.0.0",
    "@inertiajs/core": "^2.3.16",
    "@inertiajs/vue3": "^2.3.16",
    "@tailwindcss/vite": "^4.2.1",
    "@tanstack/vue-table": "^8.21.3",
    "@tiptap/extension-bubble-menu": "^3.20.0",
    "@tiptap/extension-link": "^3.20.0",
    "@tiptap/extension-placeholder": "^3.20.0",
    "@tiptap/starter-kit": "^3.20.0",
    "@tiptap/vue-3": "^3.20.0",
    "@types/node": "^25.3.0",
    "@unovis/ts": "^1.6.4",
    "@unovis/vue": "^1.6.4",
    "@vee-validate/zod": "^4.15.1",
    "@vitejs/plugin-vue": "^6.0.4",
    "@vueuse/core": "^14.2.1",
    "chart.js": "^4.5.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "embla-carousel-vue": "^8.6.0",
    "laravel-vite-plugin": "^2.1.0",
    "laravel-vue-i18n": "^2.8.0",
    "lucide-vue-next": "^0.575.0",
    "marked": "^17.0.3",
    "nanoid": "^5.1.6",
    "oxlint": "^1.50.0",
    "reka-ui": "^2.8.2",
    "tailwind-merge": "^3.5.0",
    "tailwindcss": "^4.2.1",
    "tw-animate-css": "^1.4.0",
    "vaul-vue": "^0.4.1",
    "vee-validate": "^4.15.1",
    "vite-plugin-run": "^0.6.1",
    "vite-plugin-vue-devtools": "^8.0.6",
    "vue": "^3.5.29",
    "vue-chartjs": "^5.3.3",
    "vue-input-otp": "^0.3.2",
    "vue-sonner": "^2.0.9",
    "vue-stick-to-bottom": "^0.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@storybook/addon-docs": "^10.2.12",
    "@storybook/addon-themes": "^10.2.12",
    "@storybook/addon-vitest": "^10.2.12",
    "@storybook/vue3-vite": "^10.2.12",
    "@vitest/browser": "^4.0.18",
    "@vitest/browser-playwright": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "glob": "^13.0.6",
    "happy-dom": "^20.7.0",
    "oxfmt": "^0.35.0",
    "playwright": "^1.58.2",
    "storybook": "^10.2.12",
    "typescript": "~5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.18",
    "vue-draggable-plus": "^0.6.1",
    "vue-router": "^4.6.4",
    "vue-tsc": "^3.2.5"
  },
  "peerDependencies": {
    "@inertiajs/vue3": "^2.0.0",
    "@tailwindcss/vite": "^4.0.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "laravel-vite-plugin": "^2.0.1",
    "laravel-vue-i18n": "^2.8.0",
    "vite-plugin-run": "^0.6.0",
    "vite-plugin-vue-devtools": "^8.0.0",
    "vue": "^3.5.0"
  }
}
